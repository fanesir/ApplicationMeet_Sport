<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10sp"
    android:layout_marginTop="10sp"
    android:layout_marginBottom="10sp"
    android:scrollbars="vertical"
    app:cardBackgroundColor="#F4F0F0"
    app:cardCornerRadius="20sp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="267sp">

        <Button
            android:id="@+id/okbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F4F0F0"
            android:text="OK"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13"
            app:layout_constraintVertical_bias="0.783" />

        <Button
            android:id="@+id/backbutton"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginTop="64sp"
            android:layout_marginEnd="160sp"
            android:backgroundTint="#F4F0F0"
            android:gravity="center"

            android:text="❮"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextNumber"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/nextbutton"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginTop="64sp"
            android:layout_marginEnd="16sp"
            android:backgroundTint="#F4F0F0"
            android:text="❯"

            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextNumber"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="184sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="36sp"
            android:layout_marginEnd="16sp"
            android:ems="10"
            android:hint="1"
            android:gravity="center"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewPayWay"
            android:layout_width="87sp"
            android:layout_height="27sp"
            android:layout_gravity="center"
            android:layout_marginBottom="90sp"
            android:gravity="center"
            android:text="請選擇"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/nextbutton"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintStart_toEndOf="@+id/backbutton" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginTop="64sp"
            android:layout_marginEnd="100sp"
            android:layout_marginBottom="32sp"
            android:text="預計活動費用"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/nextbutton"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            app:layout_constraintVertical_bias="0.148" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginTop="44sp"
            android:layout_marginEnd="100sp"
            android:text="預計活動人數"
            android:textSize="17sp"
            app:layout_constraintEnd_toStartOf="@+id/editTextNumber"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>